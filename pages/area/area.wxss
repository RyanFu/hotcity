.area-section-wrap{
    display: flex;
}
.area-section-wrap{
    display: flex;
    flex-flow: column nowrap;
}
.area-section-group{
    display: flex;
    padding: 20rpx 30rpx 20rpx 0;
    font-family: '微软雅黑';
    color: #666;
}
.area_label{
    width: 140rpx;
    padding: 16rpx 10rpx;
    text-align: right;
    font-size: 38rpx;
}
.area_input{
    flex: 1;
    padding: 16rpx 16rpx;
    font-size: 36rpx;
    border: 1px solid #ccc;
    border-radius: 8rpx;
}
.area-section-list{
    position: absolute;
    padding: 40rpx 0;
    box-sizing: border-box;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100vh;
    background: rgba(235,235, 235, 0.8)
}
.area_name{
    padding: 30rpx 0;
    text-align: center;
    font-family: '微软雅黑';
    font-size: 36rpx;
    color: #666;
}
.close-area-list{
    padding: 30rpx 34rpx;
    position: absolute;
    vertical-align: middle;
    text-align: center;
    right: 0;
    top: 0;
    z-index: 9;
}
.save-area-btn{
    margin-top: 50rpx;
    width: 80%;
}