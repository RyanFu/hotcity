.district-section-wrap {
    display: flex;
}
.district-section-wrap {
    display: flex;
    flex-flow: row nowrap;
}
.district-section {
    flex: 1;
}
#province,
#city,
#district {
    box-sizing: border-box;
    text-align: left;
}
.district_name {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 34rpx;
    padding: 0 26rpx;
    font-family: '微软雅黑';
    border-bottom: 1px solid #ccc;
}
#province {
    background: #fff;
    color: #666;
}
#city {
    background: #fff;
    color: #808080;
}
#district {
    background: #ffffff;
    color: #999;
}